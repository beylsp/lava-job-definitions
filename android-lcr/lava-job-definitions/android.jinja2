{% extends "master.jinja2" %}

{% block global_settings %}
timeouts:
  job:
    minutes: {% if job_timeout is defined %}{{ job_timeout }}{% else %}60{% endif %}
  action:
    minutes: 10
{% endblock global_settings %}

{% block priority %}{{LAVA_JOB_PRIORITY}}{% endblock priority %}
{% block visibility %}
visibility:
  group:
     - android
{% endblock visibility %}

{% block metadata %}
  android.build: {{ANDROID_META_BUILD}}
  android.name: {{ANDROID_META_NAME}}
  android.url: {{ANDROID_META_URL}}
{% endblock metadata %}

{% block protocols %}
protocols:
  lava-lxc:
    name: lxc-target
    template: ubuntu
    distribution: ubuntu
    release: focal
{% endblock protocols %}

{% block actions %}
- deploy:
    to: lxc
    namespace: tlxc
    timeout:
      minutes: 30
    packages:
    - sudo
    - wget

- boot:
    namespace: tlxc
    prompts:
    - 'root@(.*):/#'
    timeout:
      minutes: 5
    method: lxc

- test:
    namespace: tlxc
    timeout:
      minutes: 10
    definitions:
    - repository: http://github.com/beylsp/lava-test-definitions.git
      from: git
      path: automated/linux/android-platform-tools/install.yaml
      name: install-android-platform-tools-r2701
      parameters:
        LINK: 'https://dl.google.com/android/repository/platform-tools-latest-linux.zip'

{% block deploy_target %}
{% endblock deploy_target %}

{% block boot_target %}
{% endblock boot_target %}

{% block test_target %}
{% endblock test_target %}

{% endblock actions %}